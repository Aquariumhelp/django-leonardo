<data>
<debug>0</debug>
-
<settings>
<folder_images>/media/</folder_images>
<folder_fonts>/media/</folder_fonts>
<start_slide>1</start_slide>
<auto_play>true</auto_play>
<randomize_slides>false</randomize_slides>

<branding align_to="stage" align_pos="BR" x="0" y="-0">
<remove_logo_loader>true</remove_logo_loader>
<remove_right_menu_info>true</remove_right_menu_info>
<remove_right_menu_licence>true</remove_right_menu_licence>
</branding>
<camera x="-6" y="23" z="-140" angleX="7" angleY="15" angleZ="0" lens="6"/>
<shadow show="true" use_image="false" color="0x333333" alpha="1" blur="60" corner_TL="39,374" corner_TR="382,401" corner_BR="380,540" corner_BL="-10,468"/>
</settings>

<preloader type="circular" align_pos="MC" width="200" height="20" x="0" y="0" radius="20">

<background padding="5">
<tweenShow tint="0x2185C5" alpha="0.85" x="0" y="0"/>
<tweenOver alpha="1"/>
<tweenHide alpha="0"/>
</background>

<loader>
<tweenShow tint="0xFFFFFF" alpha="0.8"/>
<tweenOver tint="0xFFFFFF" alpha="1"/>
<tweenHide tint="0xFFFFFF" alpha="0"/>
</loader>
</preloader>
<!-- CONTROLS -->

<controls>

<auto_play_indicator type="circular" radius="5" padding="1" rotation="0" align_pos="BR" align_to="stage" width="10" height="10" x="-160" y="-7">
<auto_hide time="1">false</auto_hide>

<background padding="2">
<tweenShow tint="0xB3B3B3" alpha="1"/>
<tweenOver tint="0x248ccf"/>
<tweenHide tint="0xB3B3B3"/>
</background>

<loader>
<tweenShow tint="0xFFFFFF"/>
<tweenOver tint="0xFFFFFF"/>
<tweenHide tint="0xFFFFFF"/>
</loader>
</auto_play_indicator>
</controls>
<!-- DESCRIPTION -->
<!-- THUMBNAILS  -->

<thumbnails align_to="stage" align_pos="BC" x="10" y="10" width="230" height="40" scroll="vertical" padding_x="10" padding_y="10">
<auto_hide time="3">false</auto_hide>
<hide_on_transition>false</hide_on_transition>
<background color="0x333333" alpha="0" round_corners="5,5,5,5"/>

<thumb x="5" y="5" width="6" height="6" spacing_x="7" spacing_y="10">

<background round_corners="5,5,5,5">
<tweenShow tint="0x248ccf"/>
<tweenOver tint="0x82c7f4" scaleX="1.7" scaleY="1.7" x="-2" y="-2"/>
<tweenHide tint="0x248ccf"/>
<tweenSelected tint="0xcccccc" scaleX="1.7" scaleY="1.7" x="-2" y="-2"/>
</background>
</thumb>

<scroller align_pos="TR" x="10" y="0" width="10" height="310" round_corners="5,5,5,5">
<bar color="0x777777" alpha=".9"/>
<slider thickness="6" color="0xB3B3B3" alpha="1"/>
</scroller>
</thumbnails>

<!--
 DEFAULTS for SLIDES, TRANSITIONS and CONTROLS, if any of this attributes is not present in slide or transition in slides config, this values will be used 
-->

<defaults>

<slide time="2.5" color="0xFFFFFFF">
<image align_pos="MC" x="0" y="0" scaleX=".6" scaleY=".6"/>
<link target="_blank">http://www.getcu3er.com</link>
<description/>
</slide>
<transition type="3D" columns="1" rows="5" type2D="slide" flipOrder="90" flipShader="none" flipOrderFromCenter="false" flipAngle="180" flipDirection="left,right,up,down" flipColor="0x5e5e5e" flipBoxDepth="15" flipDepth="100" flipEasing="Sine.easeOut" flipDuration=".8" flipDelay=".2" flipDelayRandomize=".5"/>
</defaults>

	<slides width="700" height="360" align_pos="MC" x="0" y="0">
		{% for banner in widget.slot.banner_set.all %}
		<slide color="0x000000">
			<url><![CDATA[{{ banner.file.file }}]]></url>
			<link target="_self"/>
			<description>
				<heading>Heading Text</heading>
				<paragraph>Paragraph text</paragraph>
			</description>
		</slide>
		<transition type="3D" rows="5" columns="5"/>
		{% endfor %}
	</slides>
</data>
